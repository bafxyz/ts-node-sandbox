        "react-dom": "^16.8.6",
        "react-router": "^5.0.0",
        "react-router-dom": "^5.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.2",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
